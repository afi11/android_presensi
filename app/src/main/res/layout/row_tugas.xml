<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="8dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <TableLayout
                android:id="@+id/tablePresensi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <TableRow
                    android:padding="4dp"
                    android:background="@drawable/border_bottom">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Surat"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/txtNoSurat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:padding="4dp"
                    android:background="@drawable/border_bottom">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/txtTglTugas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow
                    android:padding="4dp"
                    android:background="@drawable/border_bottom">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status Tugas"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/txtStatusTugas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text=" " />
                </TableRow>
            </TableLayout>
            <TableLayout
                android:id="@+id/rowActionBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:stretchColumns="*">
                <TableRow>
                    <TextView
                        android:id="@+id/textViewKetAdmin"
                        android:inputType="textMultiLine"
                        android:textColor="@color/danger" />
                    <TextView
                        android:id="@+id/btnEditTugas"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorBg"
                        android:text="Detail"
                        android:textSize="18sp"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>