<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <gradient android:startColor="#18bf8a"
                        android:angle="180" android:endColor="@color/colorBg" />
                    <corners
                        android:radius="50dp"/>
                    <padding android:right="4dp"
                        android:left="4dp"
                        android:bottom="4dp"
                        android:top="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
    <layer-list>
        <item>
            <shape>
                <solid android:color="@color/colorBg" />
                <corners
                    android:radius="50dp"/>
                <padding android:right="4dp"
                    android:left="4dp"
                    android:bottom="4dp"
                    android:top="4dp" />
            </shape>
        </item>
    </layer-list>
    </item>
</selector>